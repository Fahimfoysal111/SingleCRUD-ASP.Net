@model IEnumerable<ProjectCRUD.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<!-- Bootstrap Icons CDN directly in the view -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Product List</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th style="width: 60px;">ID</th>
                    <th style="width: 130px;">Product ID</th>
                    <th>Name</th>
                    <th style="width: 100px;">Image</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted py-4">No products found.</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Id</td>
                            <td>@item.ProductId</td>
                            <td>@item.ProductName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Image))
                                {
                                    <img src="@item.Image" alt="@item.ProductName" class="img-thumbnail" style="max-width: 80px; max-height: 80px;" />
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No Image</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-2" title="Edit Product">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Delete Product">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
